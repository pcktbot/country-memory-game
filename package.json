{
  "name": "country-memory-game",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch server/index.ts",
    "build:client": "bun build client/app.ts --outdir public --target browser",
    "build:server": "bun build server/index.ts --outdir dist --target bun",
    "build": "bun run build:client && bun run build:server",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "@panzoom/panzoom": "^4.6.1",
    "express": "^4.18.2",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.3.3"
  }
}
